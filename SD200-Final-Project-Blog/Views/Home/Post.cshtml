                        <!-- Adding A New Comment -->
                        <div class="add-comment">
                            <header>
                                <h3 class="h6">Leave a reply</h3>
                            </header>

                            @if (User.Identity.IsAuthenticated)
                            {
                                @* UPDATE THIS LINK *@
                                <form action="#" class="commenting-form">
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <input type="text"
                                                   name="username"
                                                   id="username"
                                                   placeholder="Name"
                                                   class="form-control">
                                        </div>

                                        <div class="form-group col-md-6">
                                            <input type="email"
                                                   name="username"
                                                   id="useremail"
                                                   placeholder="Email Address (will not be published)"
                                                   class="form-control">
                                        </div>

                                        <div class="form-group col-md-12">
                                            <textarea name="usercomment"
                                                      id="usercomment"
                                                      placeholder="Type your comment"
                                                      class="form-control"></textarea>
                                        </div>

                                        <div class="form-group col-md-12">
                                            <button type="submit" class="btn btn-secondary">Submit Comment</button>
                                        </div>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <p class="text-secondary">
                                    To Leave a comment you need to be logged in
                                    @Html.ActionLink("Log in", "Login", "Account", new { ReturnUrl = Request.Url.AbsoluteUri }, new { })
                                </p>
                            }

                        </div>

                    </div>
                </div>
            </div>
        </main>


        <aside class="col-lg-4">

            <!-- Widget [Search Bar Widget]-->

            <div class="widget search">
                <div>
                    <h3 class="h6">Search the blog</h3>
                </div>

                @using (Html.BeginForm("SearchPosts", "Home", FormMethod.Post, new { id = "searchForm", @class = "search-from" }))
                {
                    <div class="form-group">
                        <input type="text" name="userSearch" placeholder="What are you looking for?">
                        <button type="submit" class="submit"><i class="icon-search"></i></button>
                    </div>
                }
            </div>

            <!-- Widget [Latest Posts Widget] -->
            <div class="widget latest-posts">
                <header>
                    <h3 class="h6">Latest Posts</h3>
                </header>

                <!-- Side Posts -->
                <div class="blog-posts">
                    @foreach (IndexPostViewModel newerPost in Model.LatestPosts)
                    {
                        string postImageLink = string.IsNullOrEmpty(newerPost.HeroImageUrl) || string.IsNullOrWhiteSpace(newerPost.HeroImageUrl) ? "" : Url.Content($@"{newerPost.HeroImageUrl}");
                        @* UPDATE THIS LINK *@
                        @*<a href="@Url.Action("Post", new { Id = newerPost.Id })">*@
                        <a href="@Url.Action("PostBySlug", new { slug = newerPost.Slug })">
                            <div class="item d-flex align-items-center">
                                <div class="image">
                                    @* UPDATE IMAGE *@
                                    <img src="@postImageLink" alt="..." class="img-fluid">
                                </div>

                                <div class="title">
                                    <strong>@newerPost.Title</strong>

                                    <div class="d-flex align-items-center">
                                        <div class="date"><i class="icon-clock"></i> @newerPost.GetPostTimeFromNow()</div>
                                        @*<div class="views"><i class="icon-eye"></i> 500</div>*@

                                        @* Update for comment count *@
                                        <div class="comments"><i class="icon-comment"></i>12</div>
                                    </div>

                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>


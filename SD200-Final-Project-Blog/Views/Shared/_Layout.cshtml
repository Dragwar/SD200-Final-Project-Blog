


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blog</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Template Styles -->
    @Styles.Render(@"~/TemplateContent/css")

    <!-- Favicon-->
    <link rel="shortcut icon" href="@Url.Content(@"~/TemplateContent/img/favicon.ico")">

    @RenderSection("Styles", required: false)

    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>

<body>

    <header class="header">

        <!-- Main Navbar-->
        <nav class="navbar navbar-expand-lg">
            <div class="container">

                <div class="navbar-header d-flex align-items-center justify-content-between">

                    <!-- Navbar Brand -->
                    @Html.ActionLink("Everett's Blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                    <!-- Toggle Button-->
                    <button type="button" data-toggle="collapse" data-target="#navbarcollapse" aria controls="navbarcollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler">

                        <!-- Hamburger Menu -->
                        <span></span>
                        <span></span>
                        <span></span>

                    </button>
                </div>

                <!-- Navbar Menu -->
                <div id="navbarcollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", new { controller = "Home" }, new { @class = "nav-link IndexPage" })
                        </li>

                        @* JUST USING INDEX PAGE TO DISPLAY ALL POSTS FOR NOW *@
                        @*<li class="nav-item">
                            @Html.ActionLink("Blog", "Blog", new { controller = "Home" }, new { @class = "nav-link BlogPage" })
                        </li>*@

                        @if (User.IsInRole(nameof(SD200_Final_Project_Blog.Models.Domain.UserRolesEnum.Admin)))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Create Post", "CreatePost", new { controller = "Home" }, new { @class = "nav-link PostPage" })
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>

            </div>
        </nav>

    </header>






    <div class="container body-content">
        @RenderBody()



        <!-- Page Footer -->
        <footer class="main-footer">
            <div style="padding-bottom: 25px;" class="container">
                <div class="row">
                    <div class="col-md-4">

                        <div class="logo">
                            <h6 class="text-white">EG's Blog</h6>
                        </div>

                        <!-- Social Media Links -->
                        <div class="contact-details">
                            <ul class="social-menu">

                                <li class="list-inline-item">
                                    <a target="_blank" href="https://github.com/Dragwar">
                                        <i class="fa fa-github"></i>
                                    </a>
                                </li>

                                <li class="list-inline-item">
                                    <a target="_blank" href="https://www.linkedin.com/in/everett-grassler/">
                                        <i class="fa fa-linkedin"></i>
                                    </a>
                                </li>

                                <li class="list-inline-item">
                                    <a target="_blank" href="https://everett-grassler.netlify.com/">
                                        <i class="fa fa-link"></i>
                                    </a>
                                </li>

                            </ul>
                        </div>

                    </div>
                </div>
            </div>


            <!-- Template Reference -->
            <div class="copyrights">
                <div class="container">
                    <div class="row">

                        <div class="col-md-6">
                            <p>&copy; @DateTime.Now.Year. All rights reserved. Your great site.</p>
                        </div>

                        <div class="col-md-6 text-right">
                            <p>
                                Template By
                                <a href="https://bootstraptemple.com" class="text-muted">Bootstrap Temple</a>
                                <!-- Please do not remove the backlink to Bootstrap Temple unless you purchase an attribution-free license @@ Bootstrap Temple or support us at http://bootstrapious.com/donate. It is part of the license conditions. Thanks for understanding :) -->
                            </p>
                        </div>

                    </div>
                </div>
            </div>

        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Template JavaScript -->
    @Scripts.Render(@"~/TemplateContent/js")


    @* Determine what page nav link should be active *@
    <script>
        makeCurrentPageHeaderNavLinkBold("@ViewBag.CurrentControllerMethodName");
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>

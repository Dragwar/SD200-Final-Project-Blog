@model PostViewModel

@{
    ViewBag.Title = Model.Title;
    string postAuthorName = string.IsNullOrEmpty(Model.PostAuthorName) || string.IsNullOrWhiteSpace(Model.PostAuthorName) ? "Anonymous User" : Model.PostAuthorName;
    string currentPostImageLink = string.IsNullOrEmpty(Model.HeroImageUrl) || string.IsNullOrWhiteSpace(Model.HeroImageUrl) ? "" : Url.Content($@"{Model.HeroImageUrl}");
}

@section Scripts {
    <script src="~/Scripts/myScripts/preventFormSubmitOnEmptySearch.js"></script>
}

@section Styles {
    @Styles.Render("~/index")
}

<!-- Main Post Page -->
<div class="container">
    <div class="row">

        <!-- Latest Posts -->
        <main class="post blog-post col-lg-8">
            <div class="container">

                <!-- MAIN POST START -->
                <div class="post-single">

                    <div class="post-details">
                        <div class="post-meta d-flex justify-content-between">
                            @if (User.IsInRole(nameof(UserRolesEnum.Admin)))
                            {
                                <form action="@Url.Action("DeletePost", new { Id = Model.Id })" method="post">
                                    <div class="category">
                                        <a class="text-info" href="@Url.Action("EditPost", new { Id = Model.Id })">Edit</a>
                                        <button class="text-danger">Delete</button>
                                    </div>
                                </form>
                            }
                        </div>

                        <h1>
                            @Model.Title

                            @* UPDATE THIS LINK *@
                            @*<a href="#">
                                    <i class="fa fa-bookmark-o"></i>
                                </a>*@
                        </h1>


                        <div class="post-footer d-flex align-items-center flex-column flex-sm-row">

                            @* UPDATE THIS LINK *@
                            <a href="#" class="author d-flex align-items-center flex-wrap">
                                @*<div class="avatar">
                                        <img src="@Url.Content(@"~/TemplateContent/img/avatar-1.jpg")" alt="..." class="img-fluid">
                                    </div>*@

                                <div class="title"><span>@postAuthorName</span></div>
                            </a>

                            <div class="d-flex align-items-center flex-wrap">
                                <div class="date"><i class="icon-clock"></i> @Model.GetPostTimeFromNow()</div>
                                @*<div class="views"><i class="icon-eye"></i> 500</div>*@

                                @* Update for comment count *@
                                <div class="comments meta-last"><i class="icon-comment"></i>12</div>
                            </div>
                        </div>

                        <!-- Post Body -->
                        <div class="post-body">
                            <p>
                                <img src="@currentPostImageLink" alt="..." class="img-fluid">
                            </p>

                            <div>
                                @Html.Raw(Model.Body)
                            </div>
                        </div>


